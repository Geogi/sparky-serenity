{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Sparky (debug)",
            "cargo": {
                "args": [
                    "build",
                    "--no-default-features",
                    "--features",
                    "test"
                ]
            },
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "terminal": "console",
            "env": {
                "RUST_LOG": "info"
            },
            "expressions": "python"
        }
    ]
}